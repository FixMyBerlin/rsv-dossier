---
import { Image } from 'astro:assets'
import { MailLink } from './links/MailLink'
import heroImage from '../assets/rsv_hero.png'
import { H1, H2 } from './Text'

type Props = {
  title: string
  subTitle?: string
  button?: boolean
}
const { title, subTitle, button } = Astro.props
---

<div class="relative flex">
  <Image src={heroImage} alt="" class="absolute inset-0 z-0 h-full w-full object-cover" />
  <div
    class="inset-o z-10 flex w-full flex-col items-center justify-center px-10 py-20 text-center"
  >
    <H1 className="mb-10 max-w-3xl">{title}</H1>
    {subTitle && <p class="mb-16 max-w-4xl text-base sm:text-2xl">{subTitle}</p>}
    {
      button && (
        <MailLink button="dark" mailto="feedback@fixmycity.de">
          Email schreiben
        </MailLink>
      )
    }
  </div>
</div>
