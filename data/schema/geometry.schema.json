{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GeoJSON FeatureCollection RSV",
  "type": "object",
  "required": ["type", "features", "bbox", "crs", "id"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "crs": {
      "type": "object",
      "properties": {
        "type": { "const": "name" },
        "properties": {
          "properties": {
            "name": {
              "const": "urn:ogc:def:crs:OGC:1.3:CRS84"
            }
          }
        }
      }
    },
    "type": {
      "type": "string",
      "const": "FeatureCollection"
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": ["type", "properties", "geometry", "bbox"],
        "properties": {
          "type": {
            "const": "Feature"
          },
          "id": {
            "type": ["number", "string"]
          },
          "properties": {
            "type": "object",
            "required": [
              "id",
              "detail_level",
              "state",
              "id_rsv",
              "planning_phase",
              "variant",
              "discarded",
              "length",
              "stand"
            ],
            "properties": {
              "id": { "type": "string" },
              "detail_level": {
                "type": "string"
              },
              "state": {
                "type": "string",
                "enum": ["idea", "agreement_process", "planning", "done"]
              },
              "id_rsv": { "type": "string" },
              "planning_phase": {
                "oneOf": [
                  {
                    "type": "string",
                    "enum": [
                      "pilot",
                      "preliminary",
                      "design",
                      "approval",
                      "execution",
                      "building"
                    ]
                  },
                  { "type": "null" }
                ]
              },
              "variant": {
                "type": ["string", "null"]
              },
              "discarded": {
                "type": "boolean"
              },
              "stand": {
                "type": "string",
                "pattern": "^[0-9]{2}.[0-9]{2}.[0-9]{4}$"
              },
              "length": { "type": "number" },
              "description:planning_phase": {
                "type": ["string", "null"]
              }
            }
          },
          "geometry": {
            "title": "GeoJSON MultiLineString",
            "type": "object",
            "required": ["type", "coordinates"],
            "properties": {
              "type": {
                "const": "MultiLineString"
              },
              "coordinates": {
                "type": "array",
                "items": {
                  "type": "array",
                  "minItems": 2,
                  "items": {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "bbox": {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": {
              "type": "number"
            }
          }
        }
      }
    },
    "bbox": {
      "type": "array",
      "minItems": 4,
      "items": {
        "type": "number"
      }
    }
  },
  "if": {
    "properties": {
      "features": {
        "items": {
          "properties": {
            "properties": { "properties": { "state": { "const": "done" } } }
          }
        }
      }
    }
  },
  "then": {
    "properties": {
      "features": {
        "items": {
          "properties": {
            "properties": {
              "properties": { "planning_phase": { "const": null } }
            }
          }
        }
      }
    }
  }
}
