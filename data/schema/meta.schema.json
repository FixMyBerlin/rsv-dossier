{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MetaSchemaRSV",
  "description": "This schema describes the state and basic information about one cycle highway (Radschnellverbindung)",
  "type": "object",
  "properties": {
    "id": {
      "description": "Distinct id for every cycle highway.",
      "type": "string"
    },
    "general": {
      "type": "object",
      "properties": {
        "ref": { "type": "string" },
        "name": { "type": "string" },
        "from": { "type": "string" },
        "to": { "type": "string" },
        "description": {
          "type": ["string", "null"]
        },
        "source": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "type": "null"
            }
          ]
        },
        "length": { "type": "number" }
      },
      "required": ["from", "to", "length"]
    },
    "stakeholders": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "roles": {
              "type": "array",
              "items": [
                {
                  "type": "string",
                  "enum": ["communication", "authority", "construction_company"]
                }
              ]
            },
            "description": {
              "type": "string"
            }
          },
          "required": ["name", "roles"]
        }
      ]
    },
    "state": {
      "type": "string",
      "enum": ["idea", "agreement_process", "planning", "in_progress", "done"]
    },
    "discarded": { "type": "boolean" },
    "planning_phase": {
      "type": "string",
      "enum": [
        "pilot",
        "preliminiary",
        "design",
        "approval",
        "execution",
        "building"
      ]
    },
    "detail_level": { "enum": ["exact", "approximated", "corridor"] },
    "finished": {
      "oneOf": [
        {
          "type": "string",
          "format": "date"
        },
        {
          "type": "null"
        }
      ],
      "description": "Year or date when building of all segments have been done."
    },
    "cost": { "type": ["string", "number", "null"] },
    "references": {
      "type": "object",
      "properties": {
        "osm_relation": { "type": "number" },
        "website": {
          "oneOf": [{ "type": "string", "format": "uri" }, { "type": "null" }]
        },
        "copyright_geometry": { "type": "string" }
      }
    }
  },
  "required": ["id", "general", "state", "cost", "finished"],
  "allOf": [
    {
      "if": {
        "properties": {
          "general": { "properties": { "source": { "const": null } } }
        }
      },
      "then": {
        "properties": {
          "general": { "properties": { "description": { "const": null } } }
        }
      }
    },
    {
      "if": {
        "properties": {
          "state": { "const": "done" }
        }
      },
      "then": {
        "properties": {
          "planning_phase": { "const": null }
        }
      }
    }
  ]
}
